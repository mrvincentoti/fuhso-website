        <script type="text/javascript">
          $(document).ready(function(){
            var csrf = <?= json_encode($this->request->getParam('_csrfToken')) ?>;

            var start = 0;
            var limit = 4;
            var reachedMax = false;

            getPostData();

            $(window).scroll(function(){
              if ($(window).scrollTop() == $(document).height()- $(window).height()) {
                getPostData();
              }
            });

            //console.log(document.getElementById('moreB'));

            function getPostData(){
              $.ajax({
                url : '<?=BASE_URL?>/articles/getPost',
                method: 'POST',
                dataType: 'text',
                cache:false,
                data : {getData:1,start:start,limit:limit,_csrfToken: csrf},
                success:function(response){
                  //console.log(response);return;
                  if(response=="") {
                    $(".loader-image").hide();
                    $("#moreBtn").hide();
                    $("#loadBtn").html("");
                  }else{
                    start += limit;
                    $(".loader-image").show();
                    $("#postData").append(response);
                    //$("#moreBtn").html("<button type='button' id='moreB' class='moreB btn btn-success btn-outline'>More</button>");
                  }
                }
              });
            }

            $('#moreB').click(function(){
              getPostData();
            });
          });
